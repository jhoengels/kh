        <record model="ir.ui.view" id="purchase_order_landing_cost_form">
            <field name="name">purchase.order.landing.cost.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_ref" position="replace">
                    <field name="partner_ref" invisible="1"/>
                </field>   
                <field name="pricelist_id" position="after">
                    <field name="tipo_cambio" attrs="{'invisible': [('pricelist_id','!=',3)]}" />
                </field>
            <!--
